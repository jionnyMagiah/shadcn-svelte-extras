{
	"name": "shadcn-svelte-extras",
	"packageManager": "pnpm@10.23.0",
	"version": "6.1.2",
	"type": "module",
	"scripts": {
		"dev": "concurrently -n 'registry,app' -c 'blue,green' \"pnpm registry:dev\"  \"pnpm generate-llms && vite dev\"",
		"build": "pnpm pre:build && vite build",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"registry:build": "jsrepo build",
		"registry:dev": "jsrepo build --watch",
		"ci:release": "jsrepo publish && changeset tag",
		"generate-i18n": "pnpm paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide",
		"generate-llms": "tsx scripts/generate-llms.ts",
		"pre:build": "pnpm sync && pnpm generate-llms && pnpm registry:build"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@emoji-mart/data": "^1.2.1",
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@fontsource-variable/geist": "^5.2.8",
		"@fontsource-variable/geist-mono": "^5.2.7",
		"@inlang/cli": "^3.0.12",
		"@inlang/paraglide-js": "2.3.2",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.554.0",
		"@lukulent/svelte-umami": "^0.0.4",
		"@shikijs/langs": "^3.15.0",
		"@shikijs/themes": "^3.15.0",
		"@sveltejs/adapter-vercel": "^6.1.2",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24.10.1",
		"@zxcvbn-ts/core": "^3.0.4",
		"@zxcvbn-ts/language-common": "^3.0.4",
		"@zxcvbn-ts/language-en": "^3.0.2",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"country-flag-icons": "^1.6.4",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"isomorphic-dompurify": "2.25.0",
		"jsrepo": "3.0.5",
		"mode-watcher": "^1.1.0",
		"package-manager-detector": "^1.5.0",
		"paneforge": "^1.0.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"runed": "^0.36.0",
		"shiki": "^3.15.0",
		"svelte": "^5.43.14",
		"svelte-check": "^4.3.4",
		"svelte-easy-crop": "^5.0.0",
		"svelte-meta-tags": "^4.5.0",
		"svelte-sonner": "^1.0.6",
		"svelte-tel-input": "^3.6.1",
		"svelte-toolbelt": "^0.10.6",
		"sveltekit-superforms": "^2.28.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.6",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0",
		"valibot": "1.1.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "7.2.2",
		"vite-plugin-transform-lucide-imports": "^0.3.0",
		"yeezy-dates": "^1.0.1"
	},
	"pnpm": {
		"ignoredBuiltDependencies": [
			"esbuild"
		],
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"esbuild"
		]
	},
	"dependencies": {
		"@svitejs/changesets-changelog-github-compact": "^1.2.0"
	}
}
